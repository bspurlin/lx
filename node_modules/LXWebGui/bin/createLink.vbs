set objWSHShell = CreateObject("WScript.Shell")

set objFso = CreateObject("Scripting.FileSystemObject")



' command line arguments

' TODO: error checking

sShortcut = objWSHShell.ExpandEnvironmentStrings("%USERPROFILE%\Desktop\LX Package Scanner.lnk")
CurrentDirectory = objFso.GetAbsolutePathName(".")
Directory = objFso.BuildPath(CurrentDirectory,"bin")
sTargetPath = objWSHShell.ExpandEnvironmentStrings(objFso.BuildPath(Directory,"boot.bat"))
sWorkingDirectory = objFso.GetAbsolutePathName(Directory)





set objSC = objWSHShell.CreateShortcut(sShortcut) 


objSC.TargetPath = sTargetPath

objSC.WorkingDirectory = sWorkingDirectory



objSC.Save